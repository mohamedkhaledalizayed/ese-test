<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFF"
    tools:context=".modules.home.presentation.view.homescreen.SignupActivity">

    <ScrollView
        android:id="@+id/sc_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_30sdp"
            android:focusableInTouchMode="true">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="fitCenter"
                android:transitionName="logo"
                android:src="@drawable/image_1"
                app:layout_constraintTop_toBottomOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/membership_id_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_logo"
                android:background="@drawable/edit_text"
                android:layout_marginTop="@dimen/_30sdp"
                >

                <EditText
                    android:id="@+id/membership_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="رقم العضوية"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="textStart"
                    android:textColor="#748A9D"
                    android:textColorHint="#748A9D"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/national_id_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/membership_id_container"
                android:background="@drawable/edit_text"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <EditText
                    android:id="@+id/national_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="الرقم القومى"
                    android:inputType="textPassword"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="textEnd"
                    android:textColor="#748A9D"
                    android:textColorHint="#748A9D"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/licence_number_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/national_id_container"
                android:background="@drawable/edit_text"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <EditText
                    android:id="@+id/licence_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="الترخيص"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="textStart"
                    android:textColor="#748A9D"
                    android:textColorHint="#748A9D"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/phone_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/licence_number_container"
                android:background="@drawable/edit_text"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="الموبايل"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="textStart"
                    android:textColor="#748A9D"
                    android:textColorHint="#748A9D"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/password_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/phone_container"
                android:background="@drawable/edit_text"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="كلمة المرور"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="textStart"
                    android:textColor="#748A9D"
                    android:textColorHint="#748A9D"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                app:layout_constraintTop_toBottomOf="@id/password_container"
                app:layout_constraintStart_toStartOf="@id/password_container"
                app:layout_constraintEnd_toEndOf="@id/password_container"
                android:text="تسجيل إشتراك"
                android:onClick="signUp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/signup_btn_bg"
                android:layout_marginTop="@dimen/_30sdp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
