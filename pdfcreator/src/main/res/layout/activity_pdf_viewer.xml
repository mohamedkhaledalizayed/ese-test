<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfc"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.PDFViewerActivity">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_toolbar_arrow"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الوثائق التامينية"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/back_btn"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"/>

        <ImageView
            android:id="@+id/download_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/download_icon"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <com.tejpratapsingh.pdfcreator.custom.ViewPagerForPhotoView
        android:id="@+id/viewPagerPdfViewer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fbfbfc"
        app:layout_constraintTop_toBottomOf="@id/header_container"/>

</androidx.constraintlayout.widget.ConstraintLayout>