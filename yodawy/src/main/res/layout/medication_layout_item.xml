<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_115sdp"
        android:paddingTop="@dimen/_10sdp"
        android:id="@+id/layout_item"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        >

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/medication_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/unnamed" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Out of Stock"
                android:background="@color/address_btn_bg"
                android:id="@+id/status"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp" />
        </FrameLayout>

        <TextView
            android:id="@+id/medication_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@+id/rate"
            android:layout_toEndOf="@+id/frameLayout"
            android:ellipsize="end"
            android:lines="1"
            android:text="PRAVOTIN (100MG SACH) G. medication name"
            android:textColor="@color/color_black" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:id="@+id/rate"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/sachets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medication_title"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"
            android:layout_toEndOf="@+id/frameLayout"
            android:text="14 Sachets" />

        <TextView
            android:id="@+id/medication_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sachets"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/frameLayout"
            android:text="EGP 85.00"
            android:textColor="@color/purple_200"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/medication_status"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_below="@+id/medication_price"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@+id/frameLayout"
            android:src="@drawable/check_mark" />

        <TextView
            android:id="@+id/delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medication_price"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toEndOf="@+id/medication_status"
            android:text="Delivery within 60 minutes"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/increase_decrease"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toEndOf="@+id/frameLayout"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_below="@+id/medication_status"
            android:background="@drawable/rounded_circle_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="-"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:background="@color/green"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="+"/>

        </LinearLayout>

        <TextView
            android:id="@+id/view_details"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toEndOf="@+id/frameLayout"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_below="@+id/medication_status"
            android:background="@drawable/view_btn_bg"
            android:padding="@dimen/_4sdp"
            android:text="VIEW"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/add_item"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toEndOf="@+id/frameLayout"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_below="@+id/medication_status"
            android:background="@drawable/add_btn_bg"
            android:padding="@dimen/_4sdp"
            android:text="ADD"
            android:textAlignment="center"
            android:textColor="@color/gray" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/frameLayout"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#E1E1E1" />

    </RelativeLayout>
</layout>