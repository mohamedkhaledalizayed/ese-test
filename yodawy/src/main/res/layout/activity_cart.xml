<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".modules.CartActivity">

        <include layout="@layout/layout_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery_time_depends_on_availability"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/_12ssp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/rounded_white_bg"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="match_parent"
                    android:background="@color/green"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:textAlignment="center"-->
<!--                        android:text="@string/_6_photos_added"-->
<!--                        android:layout_margin="@dimen/_10sdp"-->
<!--                        android:textSize="@dimen/_10ssp"/>-->

<!--                    <androidx.recyclerview.widget.RecyclerView-->
<!--                        android:id="@+id/photos_recycler"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:orientation="horizontal"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:paddingStart="@dimen/_10sdp"-->
<!--                        android:paddingEnd="@dimen/_5sdp"-->
<!--                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>-->

<!--                    <View-->
<!--                        android:id="@+id/view"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="1dp"-->
<!--                        android:layout_marginTop="@dimen/_10sdp"-->
<!--                        android:background="#E1E1E1" />-->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cart_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/prices_may_vary_across_pharmacies"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:background="@drawable/add_address_btn_bg"
            android:layout_weight="0"
            android:id="@+id/checkout"
            android:layout_margin="@dimen/_10sdp"
            android:text="@string/go_to_checkout"
            android:onClick="checkOut"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            />

    </LinearLayout>
</layout>