<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neqabty.yodawy">

    <application
        android:name=".core.application.YodawyApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".modules.ProductDetailsActivity"
            android:theme="@style/AppTheme.No"
            android:exported="false" />
        <activity
            android:name=".modules.SearchActivity"
            android:exported="false"
            android:theme="@style/AppTheme.No" />
        <activity
            android:name=".modules.AddAddressActivity"
            android:exported="false" />
        <activity
            android:name=".modules.AddressesActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.home.presentation.view.homescreen.HomeActivity"
            android:exported="false"
            android:theme="@style/AppTheme.No" />
    </application>

</manifest>