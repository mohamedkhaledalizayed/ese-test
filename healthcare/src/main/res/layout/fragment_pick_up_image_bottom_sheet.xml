<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    android:background="@color/white"
    tools:context=".chefaa.home.view.PickUpImageBottomSheet">

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_close_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/camera_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/chefaa_orders_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera_icon"/>

            <TextView
                android:fontFamily="@font/hanimation_regular"
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="الكاميره"
                android:textColor="#001e2f"
                android:textSize="@dimen/_14ssp"/>

            <TextView
                android:fontFamily="@font/hanimation_regular"
                android:id="@+id/camera_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قم بتصوير الروشتة"
                android:textSize="@dimen/_10ssp"
                android:textColor="#959698"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gallery_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/chefaa_orders_bg"
            android:gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/picture_icon"
                />

            <TextView
                android:id="@+id/gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="معرض الصور"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="#001e2f"
                android:textSize="@dimen/_14ssp"/>

            <TextView
                android:id="@+id/gallery_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اختار صورة من معرض الصور"
                android:textColor="#959698"
                android:textSize="@dimen/_10ssp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>