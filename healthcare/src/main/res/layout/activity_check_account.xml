<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/margin_large"
    android:paddingBottom="@dimen/margin_large"
    tools:context=".commen.checkaccountstatus.view.CheckAccountActivity">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_num"
        android:layout_margin="@dimen/_16sdp"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_toolbar" />

    <LinearLayout
        android:id="@+id/cl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:orientation="horizontal"
        android:weightSum="6"
        app:layout_constraintTop_toBottomOf="@id/info"
        >

        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/chefaa_orders_bg"
            android:hint="@string/phone"
            android:paddingStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textAlignment="viewStart"
            android:textColor="#748A9D"
            android:textColorHint="#748A9D"
            android:textSize="@dimen/_12ssp"
            android:inputType="phone"
            android:longClickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ccp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="2"
            app:layout_constraintTop_toTopOf="parent"
            app:ccp_autoDetectCountry="true"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/chefaa_orders_bg"
            app:ccp_defaultLanguage="ARABIC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:ccp_countryPreference="EG,SA,AE,KW,QA,BH"  />

    </LinearLayout>


    <TextView
        android:id="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/back_btn_bg"
        android:padding="@dimen/_10sdp"
        android:text="تخطي"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintBottom_toTopOf="@id/send_btn"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="#5D81D4"
        />

    <TextView
        android:id="@+id/send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/select_btn_bg"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:layout_margin="@dimen/_16sdp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>