<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">

    <ImageView
        android:id="@+id/iv_header_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:src="@drawable/bg_home_header"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_syndicate_logo"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/margin_toolbar_top_xx"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:padding="@dimen/margin_small"
        android:src="@drawable/ic_syndicate_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hanimation_arabic_medium"
        android:text="@string/welcome_in"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toTopOf="@id/tv_syndicate_name"
        app:layout_constraintEnd_toStartOf="@id/iv_notification"
        app:layout_constraintStart_toEndOf="@id/iv_syndicate_logo"
        app:layout_constraintTop_toTopOf="@id/iv_syndicate_logo" />

    <TextView
        android:id="@+id/tv_syndicate_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hanimation_arabic_bold"
        android:text="@string/syndicate"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="@id/iv_syndicate_logo"
        app:layout_constraintEnd_toEndOf="@id/tv_welcome_in"
        app:layout_constraintStart_toStartOf="@id/tv_welcome_in"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_in"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:src="@drawable/ic_notification"
        app:layout_constraintBottom_toBottomOf="@id/iv_syndicate_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_syndicate_logo"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:text="@string/signup_title"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_welcome_in" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_small"
        app:layout_constraintBottom_toTopOf="@id/bnv_syndicates_home"
        app:layout_constraintTop_toBottomOf="@id/tv_syndicate_name">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                android:id="@+id/ic_banners"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:background="@color/window_bg"
                app:carouselType="BLOCK"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:showNavigationButtons="false" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_contact_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:alpha=".7"
                android:background="@drawable/bg_contact_plain"
                android:padding="@dimen/margin_medium"
                app:layout_constraintTop_toBottomOf="@id/ic_banners">

                <ImageView
                    android:id="@+id/iv_contact_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    android:src="@drawable/ic_contact_logo"
                    app:layout_constraintBottom_toBottomOf="@id/iv_neqabty_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_neqabty_logo" />

                <ImageView
                    android:id="@+id/iv_neqabty_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    android:src="@drawable/ic_neqabty_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:fontFamily="@font/hanimation_regular"
                    android:id="@+id/tv_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    tools:text="مريم الفولي"
                    android:text="@string/contact_home_benefits"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_contact_logo" />

                <TextView
                    android:id="@+id/tv_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/retry"
                    android:background="@drawable/rounded_white_bg"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_contact_name" />

                <TextView
                    android:id="@+id/tv_balance_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_balance"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_contact_name" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="EGP 27,000.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_balance_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/iv_contact_subscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rounded_white_bg"
                android:padding="@dimen/_10sdp"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/cl_contact_holder">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ticket_discount"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tv_contact_subscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الاشتراك في خدمة التقسيط"
                    android:layout_toEndOf="@id/icon"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/hanimation_regular"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/curved_arrow_down_circle"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_contact_qr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:src="@drawable/ic_contact_qr"
                android:visibility="invisible"
                android:elevation="5dp"
                app:layout_constraintEnd_toStartOf="@id/iv_contact_service_providers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_contact_holder" />

            <ImageView
                android:id="@+id/iv_contact_service_providers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:src="@drawable/ic_contact_service_providers"
                android:visibility="invisible"
                android:elevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_contact_qr"
                app:layout_constraintTop_toBottomOf="@id/cl_contact_holder" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:layout_constraintTop_toBottomOf="@id/iv_contact_service_providers">

                <TextView
                    android:id="@+id/tv_syndicate_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:fontFamily="@font/hanimation_arabic_semibold"
                    android:text="@string/services"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_syndicate_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:scrollbars="none"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/tv_syndicate_services"/>

                <TextView
                    android:id="@+id/tv_general_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:fontFamily="@font/hanimation_arabic_semibold"
                    android:text="@string/other_services"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintTop_toBottomOf="@id/rv_syndicate_services" />

                <HorizontalScrollView
                    android:id="@+id/hsv_general_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@id/tv_general_services">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_pharmacy"
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:background="@drawable/chefaa_icons_bg"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_pharmacy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_medium"
                                android:scaleType="center"
                                android:src="@drawable/ic_services_online_pharmacy" />

                            <TextView
                                android:id="@+id/tv_pharmacy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_medium"
                                android:text="@string/ph_online"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_doctors_reservation"
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:background="@drawable/chefaa_icons_bg"

                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_doctors_reservation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_medium"
                                android:scaleType="center"
                                android:src="@drawable/ic_services_reservation" />

                            <TextView
                                android:id="@+id/tv_doctors_reservation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_medium"
                                android:text="@string/doctor"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_online_consultation"
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:background="@drawable/chefaa_icons_bg"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_online_consultation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_medium"
                                android:scaleType="center"
                                android:src="@drawable/ic_services_online_consultation" />

                            <TextView
                                android:id="@+id/tv_online_consultation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_medium"
                                android:text="@string/consl"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>
                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tv_seha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:fontFamily="@font/hanimation_arabic_semibold"
                    android:text="@string/wlcare_packages"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintTop_toBottomOf="@id/hsv_general_services" />

                <ImageView
                    android:id="@+id/iv_seha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_seha_home"
                    app:layout_constraintTop_toBottomOf="@id/tv_seha" />

                <ImageView
                    android:id="@+id/iv_medical_network_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="@dimen/margin_small"
                    android:src="@drawable/bg_rounded_gray"
                    app:layout_constraintBottom_toBottomOf="@id/iv_medical_group"
                    app:layout_constraintTop_toTopOf="@id/iv_medical_group" />

                <TextView
                    android:id="@+id/tv_medical_network"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:fontFamily="@font/hanimation_arabic_medium"
                    android:text="@string/medical_network"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintBottom_toBottomOf="@id/iv_medical_network_bg"
                    app:layout_constraintEnd_toStartOf="@id/iv_medical_group"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_seha"
                    app:layout_constraintTop_toTopOf="@id/iv_medical_network_bg" />

                <ImageView
                    android:id="@+id/iv_medical_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_medium"
                    android:paddingHorizontal="@dimen/margin_medium"
                    android:paddingVertical="@dimen/margin_large"
                    android:src="@drawable/ic_medical_group"
                    app:layout_constraintEnd_toStartOf="@+id/iv_medical_arrow"
                    app:layout_constraintTop_toBottomOf="@id/iv_seha" />

                <ImageView
                    android:id="@+id/iv_medical_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:src="@drawable/ic_medical_group_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/iv_medical_network_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_medical_network_bg" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_syndicates_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded"
        android:elevation="0dp"
        app:elevation="0dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu_syndicates_home" />

    <ImageView
        android:id="@+id/iv_profile_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:elevation="0dp"
        android:src="@drawable/ic_bottom_profile"
        app:layout_constraintBottom_toTopOf="@id/bnv_syndicates_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bnv_syndicates_home" />
</androidx.constraintlayout.widget.ConstraintLayout>
