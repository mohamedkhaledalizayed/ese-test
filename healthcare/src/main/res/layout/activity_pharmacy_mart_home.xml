<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".chefaa.home.view.ChefaaHomeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_toolbar_arrow"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#001e2f"
                android:layout_toEndOf="@id/back_btn"
                android:layout_centerVertical="true"
                android:fontFamily="@font/hanimation_arabic_medium"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                android:text="صيدلية WLCARE"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:textColor="#6A6A6A"
            android:text="@string/about_medicine"
            app:layout_constraintTop_toBottomOf="@id/header_container"
            android:layout_margin="@dimen/_10sdp"/>

        <LinearLayout
            android:id="@+id/chefaa_main_functions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/info"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/add_prescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/chefaa_icons_bg"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_20sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/chefaa_prescription_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اضف الروشتة"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/hanimation_regular"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/write_order_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/chefaa_icons_bg"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_20sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/chefaa_write_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اكتب طلبك"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/hanimation_regular"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/chefaa_previous_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="الطلبات السابقة"
            app:layout_constraintTop_toBottomOf="@id/chefaa_main_functions_container"
            android:fontFamily="@font/hanimation_arabic_medium"
            android:textSize="@dimen/_12ssp"
            android:textColor="#6A6A6A"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_200sdp"
            app:layout_constraintTop_toBottomOf="@id/chefaa_previous_order">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/orders_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/background_color"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

            <ProgressBar
                android:id="@+id/progress_circular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/no_previous_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/no_previous_orders"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/no_previous_orders_text"
                android:fontFamily="@font/hanimation_arabic_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="لا يوجد طلبات سابقة"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center|bottom"
                android:textSize="@dimen/_12ssp"
                android:textColor="#667085"/>


        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>