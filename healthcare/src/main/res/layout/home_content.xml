<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.home.presentation.view.homescreen.HomeActivity">

    <include layout="@layout/custom_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/custom_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_toolbar"
        android:padding="@dimen/_10sdp"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/home_image_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_165sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/home_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="سجل الأن"
                    android:textColor="#a3ddff"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_20sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="نقابتى صحة مستدامة"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="الاستفادة من الأسعار\n التعاقدية المخفضة "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textAlignment="center"
                    android:lineSpacingMultiplier="0.8"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <Button
                    android:layout_width="@dimen/_87sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="البدء الآن"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/home_btn"/>


            </LinearLayout>

            <TextView
                android:id="@+id/text_seha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/home_image_details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="نقابتي صحة مستدامة "
                android:textSize="@dimen/_12ssp"
                android:textColor="#272a3f"
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"/>


            <HorizontalScrollView
                android:id="@+id/about_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text_seha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_10sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_95sdp"
                        android:elevation="@dimen/_4sdp"
                        android:onClick="aboutDetails"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_4sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/about_neqabty_bg"
                            >

                            <ImageView
                                android:id="@+id/about_icon"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/ic_about" />

                            <TextView
                                android:id="@+id/about_seha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/about_icon"
                                android:text="ما هي نقابتي صحة\nمستدامة "
                                android:textColor="#4c5980"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/about_icon"
                                android:layout_below="@+id/about_seha"
                                android:text="معرفة المزيد"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="#1792dc"
                                android:layout_marginTop="@dimen/_10sdp"
                                />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_95sdp"
                        android:elevation="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_4sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/about_neqabty_bg"
                            >

                            <ImageView
                                android:id="@+id/about_icon1"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:src="@drawable/ic_about" />

                            <TextView
                                android:id="@+id/about_seha1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/about_icon1"
                                android:text="ما هي نقابتي صحة\nمستدامة "
                                android:textColor="#4c5980"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/about_icon1"
                                android:layout_below="@+id/about_seha1"
                                android:text="معرفة المزيد"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="#1792dc"
                                android:layout_marginTop="@dimen/_10sdp"
                                />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_95sdp"
                        android:elevation="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_4sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/about_neqabty_bg"
                            >

                            <ImageView
                                android:id="@+id/about_icon2"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/ic_about" />

                            <TextView
                                android:id="@+id/about_seha2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/about_icon2"
                                android:text="ما هي نقابتي صحة\nمستدامة "
                                android:textColor="#4c5980"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/about_icon2"
                                android:layout_below="@+id/about_seha2"
                                android:text="معرفة المزيد"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="#1792dc"
                                android:layout_marginTop="@dimen/_10sdp"
                                />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <RelativeLayout
                app:layout_constraintTop_toBottomOf="@+id/about_section"
                android:id="@+id/news_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="أخبارنا"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/news_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="المزيد من الأخبار"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12ssp"
                    />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/our_news_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/news_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>