<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/payment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/total_bg"
        app:layout_constraintTop_toBottomOf="@id/layout_toolbar"
        android:layout_margin="@dimen/_16sdp"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/package_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سعر الباقة"
            android:textColor="@color/black"
            android:fontFamily="@font/hanimation_arabic_medium"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/package_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EGP 00.00"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/vat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ضريبة القيمة المضافة"
            android:textColor="@color/black"
            android:fontFamily="@font/hanimation_arabic_medium"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/package_price"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/vat_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EGP 00.00"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/package_price_value"
            android:layout_alignParentEnd="true"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/vat_value"
            android:background="@color/colorGrey"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاجمالي"
            android:textSize="@dimen/_12ssp"
            android:textColor="#6E7389"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/view"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EGP15,560.00"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/view"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/payment_methods_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/payment_container"
        android:gravity="center"
        android:layout_margin="@dimen/_16sdp"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/b_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/select_btn_bg"
        android:text="التالي"
        android:textAlignment="center"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
