<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_enter_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/enter_otp"
        android:textColor="@color/secondaryText"
        android:textSize="?textSizeMedium"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otv_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:textColor="@color/secondaryText"
        app:bar_enabled="false"
        app:height="@dimen/_50sdp"
        android:layoutDirection="ltr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enter_otp"
        app:length="5"
        app:otp_box_background_active="@drawable/otp_bg_outline"
        app:otp_box_background="@drawable/otp_bg_outline"
        app:otp_text_size="@dimen/text_size_large"
        app:width="@dimen/_45sdp" />

    <TextView
        android:id="@+id/tv_resend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="center"
        android:text="@string/otp_resend"
        android:textColor="@color/secondaryText"
        android:textSize="?textSizeMedium"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/otv_otp" />

    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        android:text="@string/resend_otp"
        android:textColor="@color/colorPrimary"
        android:textSize="?textSizeMedium"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_resend_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
