<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/chefaa_orders_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/_14sdp"
            android:id="@+id/layout_item"
            >

            <TextView
                android:fontFamily="@font/hanimation_arabic_light"
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تم التوصيل"
                android:textColor="@color/white"
                android:paddingHorizontal="@dimen/_5sdp"
                android:background="@drawable/order_status_new_bg"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اضافة روشتة"
                android:textColor="#8696BB"
                android:visibility="gone"
                android:layout_below="@id/order_status"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_type"
                android:text="#123456788"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_number"
                android:text="20 Jan 2013"
                android:textColor="#7a7a9d"
                android:textSize="@dimen/_10ssp" />

            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/curved_arrow_down_circle" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>