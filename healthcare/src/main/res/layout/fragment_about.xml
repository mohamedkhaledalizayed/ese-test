<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context=".modules.home.presentation.view.about.AboutFragment">

    <ImageView
        android:id="@+id/close"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icon_close"
        android:layout_margin="@dimen/_10sdp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_140sdp"
        android:src="@drawable/about_details"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ما هي نقابتي صحة مستدامة "
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نقابتي صحة مستدامة هي شبكة طبية متخصصة متوفرة لدي العديد من الجهات العلاجية ذات التخصصات المختلفة والمنتشرة في جميع المحافظات في جميع انحاء الجمهورية والتي تشمل المستشفيات والمراكز الطبية، معامل التحاليل، مراكز الاشعة، مراكز العلاج الطبيعي والأجهزة التعويضية. نقابتي صحة مستدامة توفر لعملائها نسب خصم تتراوح ما بين ٥٠٪ الى ٧٠٪ لدي كافة الجهات العلاجية. بالإضافة الى توافر خدمات الصيدلية اونلاين بنسب خصم تصل الي ٢٠٪ على الادوية المحلية والمستوردة وخدمات الاستشارات الطبية اونلاين وذلك من خلال التطبيق “نقابتي” و تأمين طبي شامل يصل الى 50 الف ج يغطى تكاليف العمليات و العلاج داخل المستشفيات و تأمين ضد الحوادث يصل الى 125 الف ج ."
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textAlignment="center"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"/>

</LinearLayout>