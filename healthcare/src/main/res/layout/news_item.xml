<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/news_item_bg"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <carbon.widget.ImageView
            android:id="@+id/news_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_alignParentStart="true"
            app:carbon_cornerRadius="@dimen/_5sdp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/black"
            android:lines="1"
            android:textSize="@dimen/_12ssp"
            android:layout_toEndOf="@id/news_image"
            />

        <TextView
            android:id="@+id/news_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="#80000000"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="@dimen/_10ssp"
            android:layout_below="@id/news_title"
            android:layout_toEndOf="@id/news_image"
            />

        <TextView
            android:id="@+id/news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:drawableStart="@drawable/date_icon"
            android:layout_toEndOf="@id/news_image"
            android:layout_below="@id/news_content"
            android:textSize="@dimen/_10ssp"
            android:textColor="#7d7e7e"/>

    </RelativeLayout>

</layout>