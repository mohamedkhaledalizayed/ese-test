<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    tools:context=".auth.signup.presentation.view.SignupActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/sc_view_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">


        <LinearLayout
            android:id="@+id/cl_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_20sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:transitionName="logo"
                android:src="@drawable/image_1"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/phone_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:layout_marginTop="@dimen/_30sdp"
                >

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/phone"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="#748A9D"
                    android:textSize="@dimen/_12ssp"
                    android:inputType="phone"
                    android:longClickable="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/email_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <EditText
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/email"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="#748A9D"
                    android:textSize="@dimen/_12ssp"
                    android:longClickable="false"
                    android:inputType="textEmailAddress"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/national_id_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                >

                <EditText
                    android:id="@+id/national_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/national_id"
                    android:inputType="number"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:maxLength="14"
                    android:longClickable="false"
                    android:textColorHint="#748A9D"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/serial_number_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/edit_text"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                >

                <EditText
                    android:id="@+id/serial_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/serial_number"
                    android:inputType="number"
                    android:padding="@dimen/_10sdp"
                    android:longClickable="false"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textColorHint="#748A9D"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/spinner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:background="@drawable/edit_text"
                android:padding="@dimen/_6sdp">

                <Spinner
                    android:id="@+id/sp_syndicates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:popupBackground="@color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/membership_id_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <EditText
                    android:id="@+id/membership_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/membership_id"
                    android:padding="@dimen/_10sdp"
                    android:longClickable="false"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textColorHint="#748A9D"
                    android:textSize="@dimen/_12ssp"
                    android:inputType="number"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/full_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/edit_text"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <EditText
                    android:id="@+id/full_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/full_name"
                    android:padding="@dimen/_10sdp"
                    android:longClickable="false"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textColorHint="#748A9D"
                    android:textSize="@dimen/_12ssp"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/password_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edit_text"
                    app:layout_constraintTop_toBottomOf="@id/cl_username">

                    <ImageView
                        android:id="@+id/show_hide"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="8dp"
                        android:onClick="showHidePassword"
                        android:src="@drawable/ic_baseline_visibility_off_24"
                        app:layout_constraintBottom_toBottomOf="@id/password"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/password"
                        app:layout_constraintTop_toTopOf="@id/password" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/password"
                        android:padding="@dimen/_10sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textColorHint="#7C7B7B"
                        android:textSize="@dimen/_10ssp"
                        android:inputType="textPassword"
                        android:longClickable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/show_hide"
                        app:layout_constraintStart_toEndOf="@id/seperator22"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <View
                        android:id="@+id/seperator22"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:background="#748A9D"
                        app:layout_constraintBottom_toBottomOf="@id/user_iv22"
                        app:layout_constraintStart_toEndOf="@id/user_iv22"
                        app:layout_constraintTop_toTopOf="@id/user_iv22" />

                    <ImageView
                        android:id="@+id/user_iv22"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:src="@drawable/ic_lock"
                        app:layout_constraintBottom_toBottomOf="@id/password"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/password" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password_conditions"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="#434343"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/edit_text"
                    app:layout_constraintTop_toBottomOf="@id/cl_username">

                    <ImageView
                        android:id="@+id/show_hide_password"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="8dp"
                        android:onClick="showHideConfirmPassword"
                        android:src="@drawable/ic_baseline_visibility_off_24"
                        app:layout_constraintBottom_toBottomOf="@id/confirm_password"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/confirm_password"
                        app:layout_constraintTop_toTopOf="@id/confirm_password" />

                    <EditText
                        android:id="@+id/confirm_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/confirm_pass"
                        android:padding="@dimen/_10sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textColorHint="#7C7B7B"
                        android:textSize="@dimen/_10ssp"
                        android:inputType="textPassword"
                        android:longClickable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/show_hide_password"
                        app:layout_constraintStart_toEndOf="@id/seperator_password"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <View
                        android:id="@+id/seperator_password"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:background="#748A9D"
                        app:layout_constraintBottom_toBottomOf="@id/user_iv_password"
                        app:layout_constraintStart_toEndOf="@id/user_iv_password"
                        app:layout_constraintTop_toTopOf="@id/user_iv_password" />

                    <ImageView
                        android:id="@+id/user_iv_password"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:src="@drawable/ic_lock"
                        app:layout_constraintBottom_toBottomOf="@id/confirm_password"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/confirm_password" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/signup"
                android:onClick="signUp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:background="@drawable/signup_btn_bg"
                android:layout_marginTop="@dimen/_30sdp"
                />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
