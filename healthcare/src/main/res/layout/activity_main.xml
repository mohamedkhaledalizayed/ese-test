<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.neqabty.healthcare.mega.home.view.MegaHomeActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.neqabty.healthcare.mega.home.view.MegaHomeActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="0dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_up_menu"
            app:titleTextColor="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                    android:id="@+id/carousel"
                    android:layout_width="match_parent"
                    app:carouselType="BLOCK"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_margin="@dimen/_10sdp"
                    app:showNavigationButtons="false"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/services"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    android:scaleType="center"
                                    android:src="@drawable/subscription_model"
                                    android:id="@+id/iv_subscription"
                                    />

                                <TextView
                                    android:fontFamily="@font/hanimation_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:id="@+id/subscription_model_title"
                                    android:textColor="@color/black"
                                    android:text="تجديد إشتراك"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:elevation="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_4sdp"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    android:scaleType="center"
                                    android:src="@drawable/healthcare"
                                    android:id="@+id/visit_home_image"
                                    />

                                <TextView
                                    android:fontFamily="@font/hanimation_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:id="@+id/visit_home"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="@string/visit_home"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_4sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    android:scaleType="center"
                                    android:src="@drawable/medicine_image"
                                    android:id="@+id/medicine_image"
                                    />

                                <TextView
                                    android:fontFamily="@font/hanimation_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:id="@+id/medicine_title"
                                    android:textColor="@color/black"
                                    android:text="@string/medicine"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    android:scaleType="center"
                                    android:src="@drawable/pharmacy"
                                    android:id="@+id/pharmacy_image"
                                    />

                                <TextView
                                    android:fontFamily="@font/hanimation_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:id="@+id/pharmacy_title"
                                    android:textColor="@color/black"
                                    android:text="@string/pharmacy"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:elevation="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_4sdp"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    android:scaleType="center"
                                    android:src="@drawable/consl"
                                    android:id="@+id/consl_image"
                                    />

                                <TextView
                                    android:fontFamily="@font/hanimation_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:id="@+id/consl"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="@string/consl"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_4sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    android:scaleType="center"
                                    android:src="@drawable/doctor"
                                    android:id="@+id/doctor_image"
                                    />

                                <TextView
                                    android:fontFamily="@font/hanimation_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:id="@+id/doctor_title"
                                    android:textColor="@color/black"
                                    android:text="@string/doctor"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </HorizontalScrollView>

                <RelativeLayout
                    android:id="@+id/syndicates_news_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_syndicate_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/neqabty_news"
                        android:textColor="@color/black"
                        android:textSize="?textSizeLarge"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_syndicate_news_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/more"
                        android:textColor="@color/colorPrimary"
                        android:textSize="?textSizeLarge"
                        android:textStyle="bold" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/syndicate_news_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />

                <RelativeLayout
                    android:id="@+id/all_news_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/general_news"
                        android:textColor="@color/black"
                        android:textSize="?textSizeLarge"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_news_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/more"
                        android:textColor="@color/colorPrimary"
                        android:textSize="?textSizeLarge"
                        android:textStyle="bold" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/news_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_trips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_trips"
                        android:textColor="@color/black"
                        android:textSize="?textSizeLarge"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_trips_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/more"
                        android:textColor="@color/colorPrimary"
                        android:textSize="?textSizeLarge"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_courses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/courses"
                        android:textColor="@color/black"
                        android:textSize="?textSizeLarge"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_courses_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/more"
                        android:textColor="@color/colorPrimary"
                        android:textSize="?textSizeLarge"
                        android:textStyle="bold" />
                </RelativeLayout>



            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:scrollbarSize="0dp"
        android:background="#FFF"
        app:headerLayout="@layout/nav_header_main"
        app:itemIconTint="#000"
        app:itemTextColor="#000"
        android:scrollbars="none"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>