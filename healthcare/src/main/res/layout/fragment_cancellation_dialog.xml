<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_16sdp"
    android:background="@color/background_color"
    tools:context=".pharmacymart.orders.ui.orderdetails.CancellationDialog">

    <TextView
        android:id="@+id/alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert"
        android:textColor="@color/black"
        android:fontFamily="@font/hanimation_arabic_medium"
        android:textSize="@dimen/_12ssp"/>

    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alert"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="هل تريد إلغاء هذا الطلب!"
        android:fontFamily="@font/hanimation_regular"
        android:textSize="@dimen/_12ssp"/>

    <EditText
        android:id="@+id/cancellation_reason"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/edit_text_bg"
        android:hint="من فضلك اكتب السبب"
        android:textSize="@dimen/_10ssp"
        android:textColorHint="@color/unselected_color"
        android:textAlignment="center"
        android:layout_below="@id/alertTitle"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancellation_reason"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/agree"
            android:fontFamily="@font/hanimation_regular"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="@string/agree"
            android:background="@drawable/back_btn_bg"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/_5sdp"
            />

        <TextView
            android:id="@+id/disagree"
            android:fontFamily="@font/hanimation_regular"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:background="@drawable/select_btn_bg"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/_5sdp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>