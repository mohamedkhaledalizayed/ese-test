<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sustainablehealth.home.presentation.view.homescreen.home.SyndicatesFragment">

    <TextView
        android:fontFamily="@font/droidkufi_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/info_home"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        />

    <TextView
        android:fontFamily="@font/droidkufi_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/more_main"
        android:textSize="@dimen/_10ssp"
        android:textColor="#7080ad"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/syndicates_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:minHeight="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_18sdp"
            tools:listitem="@layout/syndicate"
            />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_circular"
            android:layout_gravity="center"
            />

    </FrameLayout>

</LinearLayout>