<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neqabty.healthcare">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".core.application.HealthCareApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.NoActionBar">
        <activity
            android:name=".modules.offers.presentation.view.payment.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".modules.offers.presentation.view.takeoffer.TakeOfferActivity"
            android:exported="false" />
        <activity
            android:name=".modules.offers.presentation.view.cashback.CashBackActivity"
            android:exported="false" />
        <activity
            android:name=".modules.offers.presentation.view.offers.OffersActivity"
            android:exported="false" />
        <activity
            android:name=".modules.search.presentation.view.searchresult.SearchResultActivity"
            android:exported="false" />
        <activity
            android:name=".modules.search.presentation.view.search.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".modules.wallet.presentation.WalletActivity"
            android:exported="false" />
        <activity
            android:name=".modules.home.presentation.view.homescreen.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>