<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.view.update.UpdateInfoActivity"
        >

        <include
            android:id="@+id/toolbar"
            layout="@layout/mega_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:clickable="true"
                    app:cardCornerRadius="@dimen/_7sdp"
                    >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_230sdp">

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_white_bg"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:text="@string/cardrenewal"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/mobile_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:background="@drawable/edit_text"
                                app:layout_constraintTop_toBottomOf="@id/spinner_container">

                                <EditText
                                    android:id="@+id/mobile"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="@string/phone"
                                    android:inputType="number"
                                    android:padding="@dimen/_10sdp"
                                    android:textAlignment="textStart"
                                    android:textColor="#748A9D"
                                    android:textColorHint="#748A9D"
                                    android:textSize="?textSizeMedium"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/address_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/edit_text"
                                app:layout_constraintTop_toBottomOf="@id/spinner_container">

                                <EditText
                                    android:id="@+id/address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="@string/address"
                                    android:inputType="text"
                                    android:padding="@dimen/_10sdp"
                                    android:textAlignment="textStart"
                                    android:textColor="#748A9D"
                                    android:textColorHint="#748A9D"
                                    android:textSize="?textSizeMedium"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/year_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/edit_text"
                                app:layout_constraintTop_toBottomOf="@id/spinner_container">

                                <EditText
                                    android:id="@+id/year"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="@string/year"
                                    android:inputType="number"
                                    android:padding="@dimen/_10sdp"
                                    android:textAlignment="textStart"
                                    android:textColor="#748A9D"
                                    android:textColorHint="#748A9D"
                                    android:textSize="?textSizeMedium"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/sign_up_btn_bg"
                                android:gravity="center"
                                android:onClick="addMemberImage"
                                android:orientation="horizontal"
                                android:padding="@dimen/_8sdp">

                                <ImageView
                                    android:id="@+id/icon"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/add_user" />

                                <TextView
                                    android:id="@+id/personal_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="@string/personal_photo"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:background="@drawable/login_btn_bg"
                                android:text="@string/send_order"
                                android:onClick="membershipOrder"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10ssp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/status_image"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:padding="@dimen/_10sdp"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdp"
                            android:src="@drawable/add_image" />

                        <ProgressBar
                            android:id="@+id/progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/message_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_45sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>


                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/licence_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:clickable="true"
                    app:cardCornerRadius="@dimen/_7sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white_bg"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="@string/ministry_license"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/_120sdp"
                            >

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_150sdp"
                                android:background="@drawable/sign_up_btn_bg"
                                android:padding="@dimen/_10sdp"
                                android:onClick="addImage"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/add_image" />

                            <ImageView
                                android:id="@+id/status"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_10sdp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/add_image" />

                            <ProgressBar
                                android:id="@+id/progress_circular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/_45sdp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                        </FrameLayout>

                        <Button
                            android:id="@+id/send_order"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/login_btn_bg"
                            android:text="@string/send_order"
                            android:onClick="ministryLicenseOrder"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>