<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.PaymentsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <FrameLayout
        android:id="@+id/spinner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_30sdp"
        android:background="@drawable/spinner_brder_white"
        android:padding="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent">

        <Spinner
            android:id="@+id/sp_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingEnd="10dp"
            android:popupBackground="@color/splash_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@null"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/membership_id_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner_container"
        android:background="@drawable/edit_text"
        android:layout_margin="@dimen/_30sdp"
        >

        <EditText
            android:id="@+id/membership_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="رقم العضوية"
            android:padding="@dimen/_10sdp"
            android:textAlignment="textStart"
            android:textColor="#748A9D"
            android:textColorHint="#748A9D"
            android:textSize="@dimen/_10ssp"
            android:textStyle="italic"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintTop_toBottomOf="@id/membership_id_container"
        app:layout_constraintStart_toStartOf="@id/membership_id_container"
        app:layout_constraintEnd_toEndOf="@id/membership_id_container"
        android:text="التالى"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_10ssp"
        android:background="@drawable/signup_btn_bg"
        android:layout_marginTop="@dimen/_30sdp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>