<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                android:id="@+id/carousel"
                android:layout_width="match_parent"
                app:carouselType="BLOCK"
                android:layout_height="@dimen/_150sdp"
                android:layout_margin="@dimen/_10sdp"
                app:showNavigationButtons="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/services"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_10sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_4sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:scaleType="center"
                                android:src="@drawable/subscription_model"
                                android:id="@+id/iv_subscription"
                                />

                            <TextView
                                android:fontFamily="@font/cairo_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="?textSizeLarge"
                                android:id="@+id/subscription_model_title"
                                android:textColor="@color/black"
                                android:text="@string/subscription_model"
                                android:textAlignment="center"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_4sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:scaleType="center"
                                android:src="@drawable/elder_people"
                                android:id="@+id/elder_people"
                                />

                            <TextView
                                android:fontFamily="@font/cairo_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="?textSizeLarge"
                                android:id="@+id/elder_people_title"
                                android:textColor="@color/black"
                                android:text="@string/mashat"
                                android:textAlignment="center"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:elevation="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_4sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:scaleType="center"
                                android:src="@drawable/healthcare"
                                android:id="@+id/healthcare_image"
                                />

                            <TextView
                                android:fontFamily="@font/cairo_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="?textSizeLarge"
                                android:id="@+id/healthcare_title"
                                android:textColor="@color/black"
                                android:text="@string/healthcare"
                                android:textAlignment="center"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_4sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:scaleType="center"
                                android:src="@drawable/travel_bag"
                                android:id="@+id/travels_image"
                                />

                            <TextView
                                android:fontFamily="@font/cairo_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="?textSizeLarge"
                                android:id="@+id/travels_title"
                                android:textColor="@color/black"
                                android:text="@string/trips"
                                android:textAlignment="center"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tv_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/news_title"
                    android:textColor="@color/black"
                    android:textSize="?textSizeLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_news_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/more"
                    android:textColor="@color/colorPrimary"
                    android:textSize="?textSizeLarge"
                    android:textStyle="bold" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/news_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_trips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_trips"
                    android:textColor="@color/black"
                    android:textSize="?textSizeLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_trips_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/more"
                    android:textColor="@color/colorPrimary"
                    android:textSize="?textSizeLarge"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_courses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/courses"
                    android:textColor="@color/black"
                    android:textSize="?textSizeLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_courses_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/more"
                    android:textColor="@color/colorPrimary"
                    android:textSize="?textSizeLarge"
                    android:textStyle="bold" />
            </RelativeLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>