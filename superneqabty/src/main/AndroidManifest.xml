<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neqabty.superneqabty">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".core.application.SuperNeqabtyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.NoActionBar">
        <activity
            android:name="com.neqabty.superneqabty.splash.SuperNeqabtySplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".syndicates.presentation.view.homescreen.SyndicateActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".home.view.homescreen.HomeActivity"
            android:exported="true"/>
        <activity
            android:name=".home.view.newsdetails.NewsDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.SettingsActivity"
            android:exported="false"/>
        <activity
            android:name=".aboutapp.AboutAppActivity"
            android:exported="false"/>
    </application>

</manifest>