<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.address.view.AddressActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_margin="@dimen/_10sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/address_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="العنوان"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/gray"/>


            <EditText
                android:id="@+id/address_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_text_bg"
                android:hint="@string/address"
                android:inputType="phone"
                android:padding="@dimen/_10sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/edit_text_color"
                android:textColorHint="@color/edit_text_hint"
                android:textSize="@dimen/_12ssp" />

            <FrameLayout
                android:id="@+id/country_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/_5sdp"
                >

                <Spinner
                    android:id="@+id/sp_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:background="@null"
                    android:popupBackground="@color/splash_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/government_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/_5sdp"
                >

                <Spinner
                    android:id="@+id/sp_government"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingEnd="10dp"
                    android:popupBackground="@color/splash_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
            </FrameLayout>

            <EditText
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_text_bg"
                android:hint="@string/area"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/edit_text_color"
                android:textColorHint="@color/edit_text_hint"
                android:textSize="@dimen/_12ssp" />

            <FrameLayout
                android:id="@+id/work_government_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/_5sdp"
                >

                <Spinner
                    android:id="@+id/sp_work_government"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:background="@null"
                    android:popupBackground="@color/splash_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/out_egypt_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/_5sdp"
                >

                <Spinner
                    android:id="@+id/sp_out_egypt_government"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/work_out_egypt"
                    android:paddingEnd="10dp"
                    android:background="@null"
                    android:popupBackground="@color/splash_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
            </FrameLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/save_btn_bg"
                android:text="حفظ"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>