<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.personalinfo.view.PersonalInfoActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none">

        <LinearLayout
                android:id="@+id/container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/engineer_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:visibility="visible"
                        android:paddingBottom="@dimen/_10sdp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="البيانات الشخصية"
                                android:layout_alignParentStart="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  تعديل البيانات"
                                android:id="@+id/edit_info"
                                android:drawableStart="@drawable/ic_baseline_brush_24"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/black"/>


                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/gray"/>

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bg"
                            android:hint="@string/engineer_name"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/edit_text_color"
                            android:textColorHint="@color/edit_text_hint"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="@string/phone"
                            android:inputType="phone"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/edit_text_color"
                            android:textColorHint="@color/edit_text_hint"
                            android:textSize="@dimen/_12ssp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_date_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:padding="@dimen/_9sdp">

                            <TextView
                                android:id="@+id/birthdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="تاريخ الميلاد"
                                android:textColor="@color/edit_text_color"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/add_date_image"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:visibility="gone"
                                android:src="@drawable/ic_baseline_date_range_24"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <FrameLayout
                            android:id="@+id/nationality_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:padding="@dimen/_5sdp"
                            >

                            <Spinner
                                android:id="@+id/sp_nationality"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:paddingEnd="10dp"
                                android:popupBackground="@color/splash_bg" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/nationality_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bg"
                            android:hint="@string/engineer_name"
                            android:padding="@dimen/_10sdp"
                            android:text="الجنسية"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/edit_text_color"
                            android:textColorHint="@color/edit_text_hint"
                            android:textSize="@dimen/_12ssp" />

                        <FrameLayout
                            android:id="@+id/marital_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:padding="@dimen/_5sdp"
                            >

                            <Spinner
                                android:id="@+id/sp_marital"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:paddingEnd="10dp"
                                android:popupBackground="@color/splash_bg" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/marital_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bg"
                            android:hint="@string/engineer_name"
                            android:padding="@dimen/_10sdp"
                            android:text="الحالة الاجتماعية"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/edit_text_color"
                            android:textColorHint="@color/edit_text_hint"
                            android:textSize="@dimen/_12ssp" />

                        <FrameLayout
                            android:id="@+id/gender_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:padding="@dimen/_5sdp"
                            >

                            <Spinner
                                android:id="@+id/sp_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:paddingTop="@dimen/_3sdp"
                                android:paddingStart="@dimen/_6sdp"
                                android:paddingBottom="@dimen/_3sdp"
                                android:entries="@array/gender"
                                android:paddingEnd="10dp"
                                android:popupBackground="@color/splash_bg" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/gender_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bg"
                            android:hint="@string/engineer_name"
                            android:padding="@dimen/_10sdp"
                            android:text="النوع"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/edit_text_color"
                            android:textColorHint="@color/edit_text_hint"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/national_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="@string/national_id"
                            android:inputType="number"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/edit_text_color"
                            android:textColorHint="@color/edit_text_hint"
                            android:textSize="@dimen/_12ssp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_national_id_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:padding="@dimen/_9sdp">

                            <TextView
                                android:id="@+id/national_id_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/national_id_image"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/add_national_id_image"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_baseline_file_upload_24"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/membership_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="@string/membership_id"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/edit_text_color"
                            android:textColorHint="@color/edit_text_hint"
                            android:textSize="@dimen/_12ssp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:padding="@dimen/_9sdp">

                            <TextView
                                android:id="@+id/card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/add_image_card"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_baseline_file_upload_24"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <EditText
                            android:id="@+id/family_member"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="عدد أفراد الأسرة"
                            android:inputType="number"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/edit_text_color"
                            android:textColorHint="@color/edit_text_hint"
                            android:textSize="@dimen/_12ssp" />

                        <Button
                            android:id="@+id/save_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/save_btn_bg"
                            android:text="حفظ"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/white"/>

                    </LinearLayout>


                </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardElevation="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_4sdp">


                    <LinearLayout
                        android:id="@+id/studying_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="المؤهلات الدراسية"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/gray"/>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:padding="@dimen/_5sdp"
                            >
                            <Spinner
                                android:id="@+id/sp_educational_institution"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#fff"
                                android:paddingEnd="10dp"
                                android:popupBackground="@color/splash_bg" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
                        </FrameLayout>

                        <EditText
                            android:id="@+id/branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="الشعبة"
                            android:inputType="text"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/edit_text_color"
                            android:textColorHint="@color/edit_text_hint"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/specialization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="التخصص"
                            android:inputType="text"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/edit_text_color"
                            android:textColorHint="@color/edit_text_hint"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/graduation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="@string/graduation"
                            android:inputType="number"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/edit_text_color"
                            android:textColorHint="@color/edit_text_hint"
                            android:textSize="@dimen/_12ssp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/save_btn_bg"
                            android:text="حفظ"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/white"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>