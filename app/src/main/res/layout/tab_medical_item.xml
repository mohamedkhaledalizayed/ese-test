            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBgArtificialLimbs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/selector_tab_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivImageArtificialLimbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_horizontal_normal"
                android:background="@drawable/tab_circle_green_bg"
                android:padding="@dimen/margin_vertical_normal"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_therapy_green"
                android:tint="@color/selector_tab_category_color"
                app:layout_constraintBottom_toTopOf="@id/tv_pageTextArtificialLimbs"
                app:layout_constraintEnd_toEndOf="@id/ivBgArtificialLimbs"
                app:layout_constraintStart_toStartOf="@id/ivBgArtificialLimbs"
                app:layout_constraintTop_toTopOf="@id/ivBgArtificialLimbs" />

            <TextView
                android:id="@+id/tv_pageTextArtificialLimbs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_horizontal_normal"
                android:textColor="@color/selector_tab_category_color"
