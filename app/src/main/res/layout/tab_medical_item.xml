                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/ivBgArtificialLimbs"
                app:layout_constraintEnd_toEndOf="@id/ivBgArtificialLimbs"
                app:layout_constraintStart_toStartOf="@id/ivBgArtificialLimbs"
                app:layout_constraintTop_toBottomOf="@id/ivImageArtificialLimbs"
                app:layout_constraintVertical_chainStyle="packed" />
        </androidx.constraintlayout.widget.ConstraintLayout>

