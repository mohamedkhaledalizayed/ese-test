<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="notificationItem"
            type="com.neqabty.presentation.entities.NotificationUI" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/header_bg" />


            <LinearLayout
                android:id="@+id/llContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@drawable/bg"
                android:visibility="gone"
                android:elevation="@dimen/elevation_level_one"
                android:layout_margin="@dimen/margin_horizontal_normal"
                android:padding="@dimen/margin_horizontal_normal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margin_horizontal_small"
                    android:elevation="@dimen/elevation_level_one"
                    android:shape="ring"
                    app:cardCornerRadius="@dimen/round_radius">

                    <ImageView
                        android:id="@+id/ivImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        android:scaleType="fitCenter"
                        app:imageUrl="@{notificationItem.approvalImage}" />
                </android.support.v7.widget.CardView>

                <ScrollView
                    android:id="@+id/svContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/clLogo"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{notificationItem.createdAt}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/tvDoctor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{notificationItem.doctor}"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tvProviderName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{notificationItem.provider}"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{notificationItem.status}"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tvApprovalNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{notificationItem.approvalNumber}"
                            android:textSize="@dimen/text_size_medium" />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>
