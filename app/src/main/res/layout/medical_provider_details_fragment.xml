<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="providerItem"
            type="com.neqabty.presentation.entities.ProviderUI" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/header_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/llHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:elevation="@dimen/elevation_level_one"
            android:padding="@dimen/margin_horizontal_normal"
            android:layout_margin="@dimen/margin_horizontal_normal"
            android:visibility="invisible"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivHeader">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{providerItem.name}"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{providerItem.address}"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{providerItem.phones}"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/llHolder"
            android:layout_margin="@dimen/margin_horizontal_normal"
            android:visibility="invisible"
            android:elevation="@dimen/elevation_level_one"
            app:layout_constraintTop_toTopOf="@id/llHolder"
            android:id="@+id/ivFav"/>

    </android.support.constraint.ConstraintLayout>
</layout>
