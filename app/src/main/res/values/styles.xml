<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/MyTextAppearance</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/cairo_regular</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">1dip</item>
        <item name="android:paddingStart">8dip</item>
        <item name="android:paddingEnd">8dip</item>
    </style>
    <!--<style name="ToolbarText">-->
    <!--<item name="android:textSize">@dimen/text_size_large</item>-->
    <!--<item name="android:textColor">@color/white</item>-->
    <!--<item name="colorControlNormal">@color/white</item>-->
    <!--</style>-->

    <style name="NavigationView">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>
