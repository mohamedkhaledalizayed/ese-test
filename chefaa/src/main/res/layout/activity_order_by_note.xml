<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.orders.presentation.orderbynote.OrderByNoteActivity">

    <include
        android:id="@+id/layout_header"
        layout="@layout/layout_header" />

    <View
        android:id="@+id/view_dummy"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_header"
        app:layout_constraintTop_toTopOf="@id/layout_header" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_dummy"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginVertical="@dimen/_22sdp"
        app:layout_constraintBottom_toTopOf="@id/saveBtn"
        android:padding="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inputEt"
            android:background="@color/gray"
            android:textColor="@color/black"
            android:textAlignment="viewStart"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_weight="0"
        android:background="@drawable/add_address_btn_bg"
        android:text="@string/place_order"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>