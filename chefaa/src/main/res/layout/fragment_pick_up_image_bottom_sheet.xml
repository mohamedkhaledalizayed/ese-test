<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    android:background="@color/white"
    tools:context=".modules.home.presentation.homescreen.PickUpImageBottomSheet">


    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_close_24"/>

    <LinearLayout
        android:id="@+id/chefaa_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/chefaa_info_bg"
        android:layout_marginTop="@dimen/_20sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chefaa_info_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="التوصيل خلال ٤٨ ساعة مصاريف التوصيل ......"
            android:fontFamily="@font/hanimation_regular"
            android:textSize="@dimen/_10ssp"
            android:textColor="#6a6a6a"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/camera_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_5sdp">

        <TextView
            android:fontFamily="@font/hanimation_regular"
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="الكاميره"
            android:textColor="#001e2f"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:fontFamily="@font/hanimation_regular"
            android:id="@+id/camera_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="قم بتصوير الروشتة"
            android:layout_below="@id/camera"
            android:textSize="@dimen/_10ssp"
            android:textColor="#959698"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/curved_arrow_down_circle"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#d9d9d9"
        android:layout_marginTop="@dimen/_5sdp"/>

    <RelativeLayout
        android:id="@+id/gallery_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="معرض الصور"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="#001e2f"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/gallery_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="اختار صورة من معرض الصور"
            android:layout_below="@id/gallery"
            android:textColor="#959698"
            android:textSize="@dimen/_10ssp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/curved_arrow_down_circle"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>