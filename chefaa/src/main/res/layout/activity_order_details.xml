<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".modules.home.presentation.homescreen.ChefaaHomeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_toolbar_arrow"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#001e2f"
                android:layout_toEndOf="@id/back_btn"
                android:layout_centerVertical="true"
                android:fontFamily="@font/hanimation_arabic_medium"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                android:text="الطلبات السابقة"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/chefaa_previous_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="الطلبات السابقة"
            app:layout_constraintTop_toBottomOf="@id/header_container"
            android:fontFamily="@font/hanimation_arabic_medium"
            android:textSize="@dimen/_12ssp"
            android:textColor="#282c41"/>

        <TextView
            android:fontFamily="@font/hanimation_regular"
            android:id="@+id/order_date"
            app:layout_constraintTop_toBottomOf="@id/chefaa_previous_order"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="20 Jan 2013"
            android:textColor="#7a7a9d"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:fontFamily="@font/hanimation_arabic_light"
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/chefaa_previous_order"
            android:background="@drawable/order_status_bg"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="عملية مقبولة"
            app:layout_constraintStart_toEndOf="@id/order_date"
            android:layout_toEndOf="@+id/order_date"
            android:layout_marginStart="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp" />

        <RelativeLayout
            android:id="@+id/product_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/order_status"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/chefaa_orders_bg">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/shopping_bag"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/chefaa_orders_bg"/>

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1d1e20"
                android:textSize="@dimen/_12ssp"
                android:text="Men's Tie-Dye T-Shirt \nNike Sportswear"
                android:layout_toEndOf="@id/item_image"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/hanimation_regular"
                />

            <TextView
                android:id="@+id/tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$99 (+$4.00 Tax)"
                android:textColor="#8f959e"
                android:textSize="@dimen/_10ssp"
                android:layout_below="@id/item_name"
                android:layout_toEndOf="@id/item_image"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_medium"
                />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/total_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/product_details"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/total_bg"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/montserrat_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EGP 15,560.00"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"/>

            <TextView
                android:fontFamily="@font/hanimation_arabic_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الاجمالي"
                android:textColor="#6e7389"
                android:textSize="@dimen/_12ssp"/>


        </LinearLayout>

        <LinearLayout
