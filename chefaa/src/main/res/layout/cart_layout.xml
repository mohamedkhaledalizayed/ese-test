                android:layout_height="wrap_content"
                android:padding="@dimen/_9sdp"
                android:text="@string/order_via_n_prescription"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <HorizontalScrollView
                android:id="@+id/horizontal_container"
                android:layout_below="@+id/tv_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <carbon.widget.ImageView
                        app:carbon_cornerRadius="5dp"
                        android:id="@+id/image_view"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_text_bg_chefaa"
                        android:src="@drawable/take_photo" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/photosRv"
                        android:layout_width="@dimen/_430sdp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/photo_layout_item" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_number_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_container"
                android:padding="@dimen/_9sdp"
                android:visibility="gone"
                android:text="@string/max_image"
                android:textColor="@color/red"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>


