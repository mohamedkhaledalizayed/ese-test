                android:layout_height="wrap_content"
                android:padding="@dimen/_9sdp"
                android:text="@string/order_by_note"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:fontFamily="@font/codec_pro_news"
                android:id="@+id/noteTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/edit_text_bg_chefaa"
                android:hint="@string/note_des"
                android:inputType="textMultiLine"
                android:maxLength="1000"
                android:padding="@dimen/_10sdp"
                android:scrollbars="vertical"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toBottomOf="@id/tv_note" />

            <carbon.widget.ImageView
                android:id="@+id/delete_note"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="end|top"
                android:scaleType="centerCrop"
                android:src="@drawable/cancel"
                app:carbon_cornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="@id/noteTv"
                app:layout_constraintTop_toTopOf="@id/noteTv" />
        </androidx.constraintlayout.widget.ConstraintLayout>


