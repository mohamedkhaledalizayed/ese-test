<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
   <androidx.constraintlayout.widget.ConstraintLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="@dimen/_10sdp"
       android:layout_marginEnd="@dimen/_10sdp"
       android:layout_marginBottom="@dimen/_10sdp"
       android:background="@drawable/chefaa_orders_bg"
       >

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="parent"
           android:padding="@dimen/_14sdp"
           android:id="@+id/layout_item"
           >

           <TextView
               android:fontFamily="@font/hanimation_regular"
               android:id="@+id/order_type"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="اضافة روشتة"
               android:layout_alignParentStart="true"
               android:textColor="@color/black"
               android:textSize="@dimen/_12ssp" />


           <TextView
               android:fontFamily="@font/hanimation_regular"
               android:id="@+id/order_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/order_type"
               android:text="20 Jan 2013"
               android:textColor="#7a7a9d"
               android:textSize="@dimen/_10ssp" />

           <TextView
               android:fontFamily="@font/hanimation_arabic_light"
               android:id="@+id/order_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/order_type"
               android:background="@drawable/order_status_bg"
               android:text="عملية مقبولة"
               android:layout_toEndOf="@+id/order_date"
               android:layout_marginStart="@dimen/_10sdp"
               android:paddingHorizontal="@dimen/_10sdp"
               android:textColor="@color/white"
               android:textSize="@dimen/_10ssp" />

           <TextView
               android:fontFamily="@font/hanimation_regular"
               android:id="@+id/total"
               android:text="500 جنيه"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:layout_toStartOf="@id/arrow_icon"
               android:textSize="@dimen/_12ssp" />

           <TextView
               android:fontFamily="@font/hanimation_arabic_light"
               android:id="@+id/fees"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toStartOf="@id/arrow_icon"
               android:layout_below="@id/total"
               android:text="ضريبة 20 جنيه"
               android:textSize="@dimen/_10ssp"
               />

           <ImageView
               android:id="@+id/arrow_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/curved_arrow_down_circle"
               android:layout_alignParentEnd="true"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_centerVertical="true"
               />

       </RelativeLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>